Makeup form

<%= form_for @makeup do |f| %>
	<% if @makeup.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize.(@makeup.errors.count, "error") %>
			prohibited this makeup from being saved:</h2>
			<ul>
				<% @makeup.errors.full.messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
		<% end %>

	<%= f.collection_select :brand, Makeup.all, :id, :brand, placeholder: "Brand" %>
	<%= f.collection_select :product, Makeup.all, :id, :product, placeholder: "Product" %>
	<%= f.collection_select :shade, Makeup.all, :id, :shade, placeholder: "Shade" %>

	<%= f.submit "Submit" %>

<% end %>

<%= link_to "Back to makeup list", makeups_path %>